{% include 'layout.html.twig' %}

{% block tasks %}
<div class="container body-container">
  <div class="row">
    <div id ="main" class="col-sm-9">
      <h1>Liste des tâches</h1>
                <table class="table table-striped table-middle-aligned">
                      <thead>
                      <tr>
                          <th scope="row">Titre</th>
                          <th scope="col"><span class="fa fa-book fa-fw"></span>Descritption</th>
                          <th scope="col"><span class="fa fa-calendar fa-fw"></span>Date</th>
                          <th scope="col"><span class="fa fa-bar-chart fa-fw"></span>Status</th>
                          <th scope="col" colspan="2" class="text-center"><span class="fa fa-cogs fa-fw"></span>Action</th>
                      </tr>
                  </thead>
                  <tbody>
                      {% for tasks in task %}
                      <tr>
                        <td>{{tasks.title}}</td>
                        <td>{{tasks.description}}</td>
                        <td>{{tasks.date|date("F jS \\a\\t g:ia")}}</td>
                        {% if tasks.status == 'Terminé' %}
                         <td><span class="badge badge-pill badge-success">Terminé</span></td>
                      	{% elseif tasks.status == 'En cours' %}
                      		<td><span class="badge badge-pill badge-warning">En cours</span></td>
                      	{% else %}
                      		<td><span class="badge badge-pill badge-danger">A faire</span></td>
                      	{% endif %}
                        <td><a href="/task/{{tasks.id}}" class="btn btn-sm btn-link"><span class="fa fa-eye fa-fw"></span></a></td>
                        <td><a href="/task/{{tasks.id}}/edit" class="btn btn-sm btn-info"><span class="fa fa-pencil fa-fw"></span></a></td>
                      </tr>
                      {% endfor %}
                  </tbody>
                </table>
    </div>
    <div id ="sidebar" class="col-sm-3">
      <div class="section actions">
        <a style="margin-top: 50%;"href="{{ path('task_create') }}"class="btn btn-lg btn-block btn-info"><span class="fa fa-plus fa-fw"></span>Ajouter une tâche</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
